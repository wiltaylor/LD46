#include "sdl_renderer.h"
#include "../log.h"
#include <cstdlib>

#DEFINE SCREEN_WIDTH = 900
#DEFINE SCREEN_HEIGHT = 600

void SDLRenderer::init() {
    if(SDL_Init(SDL_INIT_VIDEO) < 0) {
        log_fatal("Failed to start SDL!");

        std::abort();
    }

    m_window = SDL_CreateWindow("LD46", SDL_WINDOW_POS_UNDEFINED, SDL_WINDOWPOS_UNDEFINED, SCREEN_WIDTH, SCREEN_HEIGHT, SDL_WINDOW_SHOW);
    if(m_window == nullptr) {
        log_fatal("Failed to create SDL window!");

        std::abort();
    }


}

void SDLRenderer::on_enable() {

}

void SDLRenderer::on_disable() {

}
